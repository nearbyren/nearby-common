<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/not_bgc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/colorAccent"
    android:minHeight="?attr/actionBarSize">


    <ImageView
        android:id="@+id/toolbar_not_iv_left"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:background="@drawable/btn_back_white"
        android:clickable="true"
        android:scaleType="centerCrop"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/toolbar_not_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:maxLength="8"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Search&#8230;"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/toolbar_not_tv_title_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_not_tv_title"
        android:layout_centerHorizontal="true"
        android:paddingTop="13dp"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:text="Search&#8230;"
        tools:visibility="visible" />


    <TextView
        android:id="@+id/toolbar_not_tv_right_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="right"
        android:gravity="right"
        android:paddingRight="10dp"
        android:text="11111111111"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="gone"
        tools:text="RightTitle"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/toolbar_not_iv_right"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:clickable="true"
        android:scaleType="centerCrop"
        android:visibility="gone"
        tools:src="@drawable/aui_icon_camera"
        tools:visibility="visible" />

</RelativeLayout>
